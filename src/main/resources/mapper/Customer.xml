<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.hs.study.BankSysPro.mapper.CustomerMapper">
    <insert id="insert" parameterType="kr.hs.study.BankSysPro.dto.CustomerDto">
        insert into customers(id, password, name) values(#{id}, #{password}, #{name})
    </insert>
    <select id="list" resultType="kr.hs.study.BankSysPro.dto.CustomerDto">
        select * from customers order by id
    </select>
    <select id="list2" resultType="kr.hs.study.BankSysPro.dto.CustomerDto">
        select * from customers where id = #{id}
    </select>
    <delete id="delete" parameterType="kr.hs.study.BankSysPro.dto.CustomerDto">
        delete from customers where id = #{id}
    </delete>
    <update id="update" parameterType="kr.hs.study.BankSysPro.dto.CustomerDto">
        update customers set password = #{password}, name = #{name} where id = #{id}
    </update>
</mapper>